<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@color/black" >

    <EditText
        android:id="@+id/newPassword1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/button_separation_small"
        android:background="@drawable/input_field"
        android:hint="@string/newpass_entry_field"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPassword2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/newPassword1"
        android:layout_marginTop="@dimen/button_separation_small"
        android:background="@drawable/input_field"
        android:hint="@string/newpass_entry_field2"
        android:inputType="textPassword" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/newPassword2"
        android:layout_marginTop="@dimen/button_separation_small"
        android:background="@color/transparent"
        android:weightSum="2" >
        <Button
        	android:id="@+id/goNewBtn"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:background="@drawable/multi_button_left"
        	android:text="@string/submit_text" />

    	<Button
        	android:id="@+id/noNewBtn"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:background="@drawable/multi_button_right"
        	android:text="@string/cancel_text" />
    </LinearLayout>

</RelativeLayout>
