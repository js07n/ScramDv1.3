<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- this will be the main style used throughout the application -->
    <style name="scramd_main_theme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@drawable/background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <!-- android:textAppearance="?android:attr/textAppearanceLarge" -->
    </style>
    
    <style name="dialog_theme" >
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        
        </style>
    
    
    <!-- this is a special case of the Scramd_main_theme which will be used for the friends list -->
    <style name="scramd_main_theme_special" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
